{
  "name": "threadline",
  "version": "0.1.0",
  "description": "A desktop RSS reader built with Electron, Svelte, and Git-synced JSON",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite build && vite build --watch & electron .",
    "build": "vite build",
    "start": "electron .",
    "dev:renderer": "vite build --watch",
    "dev:electron": "electron ."
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "dompurify": "^3.0.8",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "electron": "^28.0.0",
    "svelte": "^4.2.0",
    "vite": "^5.0.0"
  },
    "build": {
    "appId": "com.threadline.app",
    "productName": "Threadline",
    "files": [
      "src/main/**/*",
      "dist/renderer/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network;Feed"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.news"
    },
    "win": {
      "target": ["nsis"]
    }
  }
  
}
